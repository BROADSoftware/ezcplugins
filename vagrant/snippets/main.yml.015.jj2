
- hosts: all
  roles:
  - etc_hosts
{%% if m.cluster.vagrant.yum_repo == "local" %%}
  - { role: yum_repo, yum_repo_mode: "local", yum_repositories_url: "{{{ m.data.repositories.vagrant.yum_repo_base_url }}}" }
{%% elif m.cluster.vagrant.yum_repo == "public" %%}
  - { role: yum_repo, yum_repo_mode: "as_fresh" }
{%% endif %%}

